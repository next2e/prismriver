{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": [
      "dom", "es7"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
        "typings/*"
      ]
    },
    "strict": true,
    "target": "es2016"
  },
  "include": [
    "src/**/*"
  ]
}